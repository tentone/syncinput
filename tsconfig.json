{
    "compilerOptions": {
      "module": "ES2020",
      "target": "es5",
      "lib": [ "es2015", "dom" ],
      "moduleResolution": "node",
      "outDir": "dist",
      "sourceMap": true,
      "declaration": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "strict": true,
      "strictNullChecks": false
    }
}